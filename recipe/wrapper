#! /bin/bash

args=("$@")
have_stdcc=false
have_stdcxx=false

for arg in "$@"; do
    if [[ $arg == "-std=c"* ]]; then
        if [[ $arg == *"++"* ]]; then
            have_stdcxx=true
        else
            have_stdcc=true;
        fi
    fi
done

new_args=$(basename "$0")

if [[ $have_stdcc == true && $have_stdcxx == true ]]; then
    for arg in "$@"; do
        if [[ ($arg != "-std=c"*) || ($arg == *"++"*) ]]; then
            new_args=("${new_args[@]}" "$arg")
        fi
    done
else
    new_args=("${new_args[@]}" "$@")
fi

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
IFS=':' read -ra env_path <<< "$PATH"
PATH=""
for dir in "${env_path[@]}"; do
    addpath=true
    if [[ "$dir" != "$SCRIPT_DIR" ]]; then
        PATH="${PATH:+$PATH:}$dir"
    fi
done

export PATH
exec "${new_args[@]}"
